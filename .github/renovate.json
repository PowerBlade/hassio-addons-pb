{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["main"],
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": false,
  "commitMessagePrefix": "⬆️",
  "commitMessageTopic": "{{depName}}",
  "gitAuthor": "renovate[bot] <bot@renovateapp.com>",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^cloudflared/(build|config)\\.yaml$"],
      "matchStrings": [
        "version:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "cloudflare/cloudflared:(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "cloudflare/cloudflared",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": ["^frigate(_[^/]+)?/config\\.yaml$"],
      "matchStrings": [
        "version:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+(?:-[\\w.-]+)?)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/blakeblackshear/frigate",
      "versioningTemplate": "docker"
    }
  ],

  "packageRules": [
    {
      "matchDepNames": ["ghcr.io/blakeblackshear/frigate"],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
