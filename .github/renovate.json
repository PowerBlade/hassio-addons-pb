{
  "baseBranches": ["main"],
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": false,
  "commitMessagePrefix": "⬆️",
  "commitMessageTopic": "{{depName}}",
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "enabledManagers": ["regex"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^cloudflared/config\\.yaml$"],
      "matchStrings": [
        "version:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+(?:-[\\w.-]+)?)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "cloudflare/cloudflared",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": ["^frigate(_[^/]+)?/config\\.yaml$"],
      "matchStrings": [
        "version:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+(?:-[\\w.-]+)?)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/blakeblackshear/frigate",
      "versioningTemplate": "docker"
    }
  ],

  "packageRules": [
    {
      "matchDepNames": ["ghcr.io/blakeblackshear/frigate", "cloudflare/cloudflared"],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
